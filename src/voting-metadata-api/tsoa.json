{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "AlgorandSignature": {
        "type": "http",
        "scheme": "apiKey",
        "name": "X-ALGORAND-SIGNED-TRANSACTION",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "routes",
    "iocModule": "src/ioc",
    "middleware": "express",
    "authenticationModule": "src/authentication"
  },
  "basePath": "/"
}
